<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.ianhanniballake.recipebook"
	android:versionCode="1314100"
	android:versionName="1.0" >
	<uses-sdk
		android:minSdkVersion="8"
		android:targetSdkVersion="13" />
	<application
		android:debuggable="true"
		android:icon="@drawable/icon"
		android:label="@string/app_name"
		android:theme="@style/Theme" >
		<provider
			android:authorities="com.ianhanniballake.recipebook"
			android:exported="false"
			android:name=".provider.RecipeProvider" >
			<grant-uri-permission android:pathPattern=".*" />
		</provider>
		<activity
			android:label="@string/app_name"
			android:name=".ui.RecipeListActivity" >
			<intent-filter >
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:label="@string/app_name"
			android:name=".ui.RecipeDetailActivity" />
		<activity
			android:label="@string/app_name"
			android:name=".ui.RecipeEditActivity" />
		<activity
			android:label="@string/app_name"
			android:name=".ui.RecipeAddEditActivity" />
	</application>
</manifest>