<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ianhanniballake.recipebook"
    android:versionCode="1314100"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/Theme" >
        <provider
            android:name=".provider.RecipeProvider"
            android:authorities="com.ianhanniballake.recipebook"
            android:exported="false" >
            <grant-uri-permission android:pathPattern=".*" />
        </provider>

        <activity
            android:name=".ui.RecipeListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.RecipeDetailActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".ui.RecipeAddEditActivity"
            android:label="@string/app_name" />
    </application>

</manifest>